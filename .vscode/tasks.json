{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile",
      "type": "shell",
      "command": "source ~/.asdf/asdf.sh && npm run compile",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "never"
      },
      "group": "build",
      "options": {
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      }
    }
  ]
}
